<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:id="@+id/ll_movie_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="大黄蜂"
        android:textColor="#f4f4f4"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp">
        <!--详细信息-->
        <!--海报封面-->
        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="centerCrop"
            android:src="@drawable/poster_1" />
        <!--文本信息-->
        <include
            layout="@layout/movie_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/iv_poster"
            android:layout_weight="3" />
    </LinearLayout>
    <!--收藏和评论按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="@drawable/do_comment_shape">
            <ImageView
                android:id="@+id/iv_movie_collect"
                android:layout_toLeftOf="@id/tv_movie_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_heart"
                android:clickable="true"/>
            <TextView
                android:id="@+id/tv_movie_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:gravity="center"
                android:text="收藏"
                android:textColor="#f4f4f4"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/do_comment_shape">

            <TextView
                android:id="@+id/tv_movie_do_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:drawableLeft="@drawable/do_comment_selector"
                android:gravity="center_vertical"
                android:text="写影评"
                android:textColor="#f4f4f4"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:text="电影剧照"
        android:textSize="16sp"
        android:textColor="#fff"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="24dp" />
    <!--横向列表-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_photo"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"></android.support.v7.widget.RecyclerView>
</LinearLayout>