<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:id="@+id/ll_movie_dialog_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <!--电影名字-->
            <TextView
                android:id="@+id/tv_movie_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:text="大黄蜂"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View style="@style/view_spilt" />
            <!--导演-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorMain"
                    android:text="导演："
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_movie_dialog_director"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="4"
                    style="@style/text_selected_enable"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:maxLines="10"
                    android:text="特拉维斯·奈特"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--编剧-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorMain"
                    android:text="类型："
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_movie_dialog_scenarist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:maxLines="10"
                    style="@style/text_selected_enable"
                    android:textColor="@color/colorWhite"
                    android:text="克莉斯缇娜"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--主演-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorMain"
                    android:text="主演："
                    android:textSize="20sp" />

                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="4">

                    <TextView
                        android:id="@+id/tv_movie_dialog_players"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="10"
                        style="@style/text_selected_enable"
                        android:textColor="@color/colorWhite"
                        android:text="海莉·斯坦菲尔德、小豪尔赫·兰登伯格、约翰·塞纳、迪伦·奥布莱恩"

                        android:textSize="20sp" />
                </ScrollView>
            </LinearLayout>

            <View style="@style/view_spilt" />
            <!--简介-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorMain"
                    android:text="简介："
                    android:textSize="20sp" />

                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="4">

                    <TextView
                        android:id="@+id/tv_movie_dialog_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="50"
                        style="@style/text_selected_enable"
                        android:paddingTop="8dp"
                        android:textColor="@color/colorWhite"
                        android:text="《大黄蜂》是由特拉维斯·奈特执导，海莉·斯坦菲尔德、小豪尔赫·兰登伯格、约翰·塞纳、迪伦·奥布莱恩主演的动作科幻电影，于2018年12月3日在德国首映，2019年1月4日在中国大陆上映 [1]  。
该片是《变形金刚》系列电影的第六部，讲述了饱经摧残的大黄蜂在一座垃圾场找到自己的藏身之地，并遇到了正遭遇人生瓶颈试图找到自己的人生定位的18岁少女查莉·沃特森的故事。"

                        android:textSize="20sp" />
                </ScrollView>
            </LinearLayout>

            <View style="@style/view_spilt" />

            <TextView
                android:id="@+id/tv_movie_dialog_close"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:gravity="center"
                android:textColor="@drawable/tv_click"
                android:text="确 定"
                android:textSize="22sp" />
        </LinearLayout>

</LinearLayout>