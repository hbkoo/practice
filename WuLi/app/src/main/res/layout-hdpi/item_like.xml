<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_iv_movie"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            android:src="@drawable/im_2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_tv_movie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/item_text_style"
                android:text="影片名：大黄蜂"/>
            <TextView
                android:id="@+id/item_tv_director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_like_tv_spacing"
                style="@style/item_text_style"
                android:text="导演：特乐维斯·奈特"/>
            <TextView
                android:id="@+id/item_tv_main_actor"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/item_like_tv_spacing"
                android:layout_height="wrap_content"
                style="@style/item_text_style"
                android:text="主演：克里斯蒂娜·霍德森"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_like_tv_spacing"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_score"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/item_text_style"
                    android:text="评分：9.5"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/comment"/>
                <TextView
                    android:id="@+id/item_tv_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    style="@style/item_text_style"
                    android:text="666"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/item_iv_like"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/red_heart"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"/>

</LinearLayout>