<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/listview_item_bg">

    <ImageView
        android:id="@+id/iv_homepage_post"
        android:layout_margin="5dp"
        android:layout_width="120dp"
        android:layout_height="172dp"
        android:src="@drawable/bumblebee"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_homepage_moviename"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="大黄蜂"
                android:textSize="35dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_homepage_point"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="8.8"
                android:textSize="60dp"
                android:textColor="#e4c247"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_homepage_director"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导演：特拉维斯·奈特"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_homepage_actor"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主演：海莉·斯坦菲尔德 "
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>