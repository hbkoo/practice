<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/listview_item_bg">

    <ImageView
        android:id="@+id/iv_search_result_post"
        android:layout_margin="10dp"
        android:layout_width="120dp"
        android:layout_height="172dp"
        android:src="@drawable/bumblebee"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_search_result_moviename"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="大黄蜂"
            android:textSize="35dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_search_result_director"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导演：特拉维斯·奈特"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tv_search_result_actor"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主演：海莉·斯坦菲尔德 "
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_search_result_point"
                android:layout_marginHorizontal="20dp"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="评分：8.8"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/comment"/>
            <TextView
                android:id="@+id/tv_search_result_comment"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="666"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>