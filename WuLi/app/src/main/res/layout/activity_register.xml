<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context=".RegisterActivity">

    <ImageView
        android:clickable="true"
        android:id="@+id/iv_back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/back_press"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:id="@+id/tv_forget"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="注册账户"
        android:textColor="#000"
        android:textSize="32dp"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="180dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/et_bg"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_account"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/people_grey"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:maxLength="11"
                android:id="@+id/et_account"
                android:layout_marginRight="18dp"
                android:textColorHint="#000"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:textSize="18dp"
                android:textStyle="normal"
                android:textColor="#000"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:background="@drawable/et_bg"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_password1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/suo_grey"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:background="@null"
                android:inputType="textPassword"
                android:id="@+id/et_password1"
                android:layout_marginRight="18dp"
                android:textColorHint="#000"
                android:hint="请输入登录密码"
                android:singleLine="true"
                android:textSize="18dp"
                android:textStyle="normal"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="30dp"
                android:clickable="true"
                android:id="@+id/iv_eye1"
                android:src="@drawable/eye_grey"
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:background="@drawable/et_bg"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_password2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/suo_grey"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:background="@null"
                android:inputType="textPassword"
                android:id="@+id/et_password2"
                android:layout_marginRight="18dp"
                android:textColorHint="#000"
                android:hint="请确认登录密码"
                android:singleLine="true"
                android:textSize="18dp"
                android:textStyle="normal"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="30dp"
                android:clickable="true"
                android:id="@+id/iv_eye2"
                android:src="@drawable/eye_grey"
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/et_bg">

            <ImageView
                android:id="@+id/iv_code"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/yaoshi_grey"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <EditText
                android:background="@null"
                android:id="@+id/et_code"
                android:layout_marginRight="18dp"
                android:textColorHint="#000"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:textSize="18dp"
                android:textStyle="normal"
                android:textColor="#000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btn_code"
                android:text="获取"
                android:textSize="14sp"
                android:background="@drawable/circle_btn_bg"
                android:textColor="#fff"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_register"
            android:text="注册"
            android:textColor="#fff"
            android:background="@drawable/circle_btn_bg"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="60dp" />

    </LinearLayout>


</RelativeLayout>