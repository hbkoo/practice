<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_bar"
        app:cardCornerRadius="6dp">
        <FrameLayout
            android:id="@+id/fl_picset"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
            <com.example.acer.wuli.main.adapter.MyViewPager
                android:id="@+id/vp_picset"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                >
            </com.example.acer.wuli.main.adapter.MyViewPager>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal|bottom">
                <ImageView
                    android:id="@+id/iv_point0"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/point_select"
                    />
                <ImageView
                    android:id="@+id/iv_point1"
                    android:layout_marginLeft="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/point"
                    />
                <ImageView
                    android:id="@+id/iv_point2"
                    android:layout_marginLeft="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/point"
                    />
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>



    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_below="@id/fl_picset"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="近期热映" />

    </LinearLayout>
    <ListView
        android:id="@+id/iv_movielist"
        android:layout_below="@id/ll_title"
        android:layout_above="@id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
    </ListView>

</LinearLayout>